{
  "extends": [
    "eslint:recommended",
    "angular"
  ],
  "See1": {
     "comment1":"https://www.npmjs.com/package/eslint-plugin-angular",
	 "comment2":"https://www.npmjs.com/package/eslint-plugin-angular"
  },  
  "env": {
    "node": true,
    "browser": true
  },
  "See2": {
      "comment1":"severity for a rule should be one of the following: 0 = off, 1 = warning, 2 = error",
	  "comment2":"// coding styler"
  },
  "rules": {   
    "wrap-iife": [2, "inside"],
    "eqeqeq": 2,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": [2, {"vars": "local", "args": "none"}],
    "no-multi-str": 2,
    "no-irregular-whitespace": 2,
    "semi": [2, "always"],
    "indent": 2,

    "See3": {
       "comment1":"os/git options, we want to run on all OSes"
    },
    "linebreak-style": 0,
    "eol-last": 2
  }
}
